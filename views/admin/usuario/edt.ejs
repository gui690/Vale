<%-include('../cabecalho.ejs')%>

    <body>

        <div class="container">
            <h1>Editar usuario</h1>
            <form  method="post">

                    <div class="form-group">
                        <input type="hidden" id="id" name="id" value="<%=Usuario.id%>"> <!--ID da cotacao -->
                        
                    </div>
                    <div class="form-group">
                        <label for="nome">Nome do usuario  </label>
                        <input type="text" id="nome" name="nome" value="<%=Usuario.nome%>" required>
                    </div>
                <div class="form-group">
                    <label for="valor">Valor</label>
                    <input type="number" id="valor" name="valor" value="<%=Usuario.valor%>"required>
                </div>
                    <div class="form-group">
                    <label for="dataCriacao">Data de criação</label>
                    <input type="date" id="dataCriacao" name="dataCriacao" value="<%=Usuario.dataCriacao%>"required>
                </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" id="email" name="email" step="0.01"  value="<%=Usuario.email%>" required >
                    </div>
                    
                    <div class="form-group">
                        <label for="cpf">CPF </label>
                        <input type="string" id="cpf" name="cpf" step="0.1"  value="<%=Usuario.cpf%>"required >
                    </div>
                    <div class="form-group">
                        <label for="telefone">Telefone </label>
                        <input type="string" id="telefone" name="telefone" step="0.1" value="<%=Usuario.telefone%>" required >
                    </div>
                
                

                <button type="submit">Salvar Alterações</button>

                <button type="button" class="bnt cancelar" onclick="window.history.back()">Cancelar</button>
            </form>
        </div>

    </body>

    </html>